<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="@dimen/margin_half"
    android:layout_marginLeft="@dimen/margin_normal"
    android:layout_marginRight="@dimen/margin_normal"
    style="@style/CardViewCommon">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_half">

        <TextView
            android:id="@+id/item_feed_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/AppTheme.Widget.TextView.Small"
            android:text="content"
            android:layout_alignParentLeft="true"
            android:layout_margin="@dimen/margin_half"/>

        <ImageView
            android:id="@+id/item_feed_add_to_calendar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_add"
            android:layout_alignParentRight="true"
            />

        <TextView
            android:id="@+id/item_feed_start_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/AppTheme.Widget.TextView.Small"
            android:layout_below="@id/item_feed_content"
            android:text="start place"
            android:layout_margin="@dimen/margin_half"/>

        <TextView
            android:id="@+id/item_feed_start_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_feed_content"
            android:layout_alignParentRight="true"
            style="@style/AppTheme.Widget.TextView.Small"
            android:text="start time"
            android:layout_margin="@dimen/margin_half"/>

        <TextView
            android:id="@+id/item_feed_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/AppTheme.Widget.TextView.Small"
            android:layout_below="@id/item_feed_start_place"
            android:text="user name"
            android:layout_margin="@dimen/margin_half"/>

    </RelativeLayout>





</android.support.v7.widget.CardView>