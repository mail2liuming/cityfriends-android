<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_half">

        <TextView
            android:id="@+id/item_feed_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/AppTheme.Widget.TextView.Small"
            android:text="type"
            android:layout_alignParentLeft="true"
            android:layout_margin="@dimen/margin_half"/>

        <TextView
            android:id="@+id/item_feed_start_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/AppTheme.Widget.TextView.Small"
            android:layout_below="@id/item_feed_type"
            android:text="start place"
            android:layout_margin="@dimen/margin_half"/>

        <TextView
            android:id="@+id/item_feed_start_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_feed_type"
            android:layout_alignParentRight="true"
            style="@style/AppTheme.Widget.TextView.Small"
            android:text="start time"
            android:layout_margin="@dimen/margin_half"/>


        <TextView
            android:id="@+id/item_feed_end_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/AppTheme.Widget.TextView.Small"
            android:layout_below="@id/item_feed_start_place"
            android:text="end place"
            android:layout_margin="@dimen/margin_half"/>

        <TextView
            android:id="@+id/item_feed_end_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_feed_start_place"
            android:layout_alignParentRight="true"
            style="@style/AppTheme.Widget.TextView.Small"
            android:text="end time"
            android:layout_margin="@dimen/margin_half"/>

        <TextView
            android:id="@+id/item_feed_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/AppTheme.Widget.TextView.Small"
            android:layout_below="@id/item_feed_end_place"
            android:text="user name"
            android:layout_margin="@dimen/margin_half"/>
    </RelativeLayout>





</android.support.v7.widget.CardView>